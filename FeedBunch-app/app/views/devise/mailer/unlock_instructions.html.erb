<% require 'mailer_button_styler' %>

<h1><%= t 'devise.mailer.unlock_instructions.header' %></h1>

<p><%= t 'devise.mailer.unlock_instructions.hello', name: @resource.name %></p>

<p><%= t 'devise.mailer.unlock_instructions.locked' %></p>

<p><%= t 'devise.mailer.unlock_instructions.unlock' %></p>

<p>
  <h2>
    <%=
        link_to t('devise.mailer.unlock_instructions.unlock_link'),
                unlock_account_url(:unlock_token => @token, locale: I18n.locale),
                style: MailerButtonStyler.button_style
    %>
  </h2>
</p>

<% link_feedbunch = link_to 'FeedBunch.com', root_url(locale: I18n.locale) %>

<p><small><%= t 'devise.mailer.unlock_instructions.note_1_html',
                name: @resource.email,
                link: link_feedbunch %></small></p>

<p><small><%= t 'devise.mailer.unlock_instructions.note_2_html', link: link_feedbunch %></small></p>
