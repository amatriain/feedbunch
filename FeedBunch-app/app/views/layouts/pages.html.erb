<!DOCTYPE html>
<html ng-app="feedbunch" class="page-with-bg-image">

<%= render 'layouts/header' %>

<body ng-controller="PagesCtrl">

<% if Feedbunch::Application.config.demo_enabled %>
  <%= render 'pages/popups/demo_info' %>
<% end %>

<div class="container-fluid">
  <div class="row bottom-alert text-center" ng-cloak>
    <div class="col-xs-12">

      <%= render 'layouts/alerts' %>

    </div>
  </div>
</div>

<%= yield %>

<%= render 'layouts/footer_js' %>

</body>
</html>
