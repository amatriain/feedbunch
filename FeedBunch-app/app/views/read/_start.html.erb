<div id="start-info">

  <% cache "start_page-#{I18n.locale}" do %>

    <div class="row">
      <div class="col-xs-12 col-sm-2 col-md-offset-1">
        <%= image_tag asset_path('logo128x128.png'), alt: 'FeedBunch', class: 'logo' %>
      </div>

      <div class="col-xs-12 col-sm-10 col-md-9">
        <h1>
          <p class="tagline"><%= t 'read.start.welcome' %></p>
          <p id="subscription-stats">
            <small>
              <%= t 'read.start.stats', feeds: '{{subscribed_feeds_count}}', entries: '{{total_unread_entries()}}' %>
            </small>
          </p>
        </h1>
      </div>
    </div>

  <% end %>

  <hr>

  <div ng-cloak>

    <%= render 'read/job_states/opml_export' %>
    <%= render 'read/job_states/opml_import' %>

    <div id="job-states" class="row" ng-show="show_job_state_alerts()">

      <div class="col-xs-12 col-md-10 col-md-offset-2">
        <%= render 'read/job_states/subscribe_job_states' %>
        <%= render 'read/job_states/refresh_feed_job_states' %>
      </div>

    </div>

  </div>

</div>