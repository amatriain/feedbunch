<% cache "unsubscribe_confirm-#{I18n.locale}" do %>

  <div id="unsubscribe-feed-popup" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3><%= t 'read.popups.unsubscribe.title' %></h3>
        </div>
        <div class="modal-body">
          <%= t 'read.popups.unsubscribe.confirm' %>
        </div>
        <div class="modal-footer">
          <button type="button"
                  id="unsubscribe-cancel"
                  class="btn btn-default"
                  data-dismiss="modal"><%= t 'read.popups.unsubscribe.cancel' %>
          </button>
          <button type="submit"
                  id="unsubscribe-submit"
                  class="btn btn-danger"
                  data-dismiss="modal"
                  ng-click="unsubscribe()"><%= t 'read.popups.unsubscribe.submit' %>
          </button>
        </div>
      </div>
    </div>
  </div>

<% end %>