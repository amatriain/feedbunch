/* FONT PATH
 * -------------------------- */

@font-face {
  font-family: 'FontAwesome';
  src: url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.eot' %>?v=#{$fa-version}');
  src: url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.eot' %>?#iefix&v=#{$fa-version}') format('embedded-opentype'),
    url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.woff2' %>?v=#{$fa-version}') format('woff2'),
    url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.woff' %>?v=#{$fa-version}') format('woff'),
    url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.ttf' %>?v=#{$fa-version}') format('truetype'),
    url('<%= asset_path 'fontawesome/fonts/fontawesome-webfont.svg' %>?v=#{$fa-version}#fontawesomeregular') format('svg');
//  src: url('<%= asset_path 'font-awesome/fonts/FontAwesome.otf' %>') format('opentype'); // used when developing fonts
  font-weight: normal;
  font-style: normal;
}