<!DOCTYPE html>
<html ng-app="feedbunch">

<%= render 'layouts/header' %>

<body
    <% if user_signed_in? %>
      class="navbar-visible"
    <% end %>
      ng-controller="DeviseCtrl">

<%= render 'layouts/navbar' %>

<div class="row top-alert">
  <div class="col-md-12 text-center" ng-cloak>

    <%= render 'layouts/alerts' %>
    <%= render 'devise/alerts' %>

  </div>
</div>

<%= render 'layouts/popups/import_subscriptions_form' %>

<div class="page-header container">
  <h1>

    <%=
        link_to root_url do
          image_tag asset_path('feed128x128.png'), alt: 'feedbunch'
        end
    %>

    <%= yield :heading %>
  </h1>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-9">
    <div class="dropdown">
      <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="icon-flag"></i>
        <%= t 'devise.views.language' %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu text-left" role="menu" aria-labelledby="dropdownMenu">
        <li>
          <%= link_to url_for(locale: 'en') do %>
            <%= image_tag asset_path('flags/us.png') %>
            English
          <% end %>
        </li>
        <li>
          <%= link_to url_for(locale: 'es') do %>
            <%= image_tag asset_path('flags/es.png') %>
            Espa√±ol
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<br>

<%= yield %>

<%= render 'layouts/footer' %>

</body>
</html>
