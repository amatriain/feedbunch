<% cache 'footer_js' do %>
  <%# Comment next block to serve JQuery, AngularJS and Bootstrap as local assets, not from a CDN %>
  <%= javascript_include_tag '//code.jquery.com/jquery-2.1.4.min.js' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-sanitize.min.js' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-touch.min.js' %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
<% end %>

<%# Comment to serve JQuery, AngularJS and Bootstrap as local assets, not from a CDN %>
<%= javascript_include_tag 'application' %>

<%# Uncomment to serve JQuery, AngularJS and Bootstrap as local assets, not from a CDN %>
<%#= javascript_include_tag 'load_libs' %>


<% cache 'footer_social_js' do %>

  <%# Facebook SDK for javascript initialization %>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : <%= Rails.application.secrets.facebook_app_ID %>,
        version    : 'v2.0'
      });
    };

    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

  <%= javascript_include_tag '//platform.twitter.com/widgets.js' %>

<% end %>

<%= render 'layouts/noscript_warning' %>