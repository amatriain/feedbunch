<div id="sidebar">

  <% cache "sidebar_start-#{I18n.locale}" do %>
    <ul class="nav nav-pills nav-stacked">
      <li ng-class="{active: current_feed==null && current_folder==null}">
        <a id="start-page" ng-click="show_start_page()"><i class="fa fa-asterisk"></i> <%= t 'read.sidebar.start' %></a>
      </li>
    </ul>
  <% end %>

  <hr>

  <div id="folders-list" ng-cloak>

    <%= render 'read/sidebar/sidebar_folder_none' %>

    <%= render 'read/sidebar/sidebar_folder' %>

  </div>

  <%# Animated spinner while folders are loading %>
  <div class="sidebar-spinner" ng-show="!folders_loaded">
    <i class="fa fa-spinner fa-spin"></i>
  </div>

</div>