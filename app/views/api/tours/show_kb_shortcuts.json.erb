<% cache "kb_shortcuts_tour-#{I18n.locale}" do %>

{
  "i18n": {
    "nextBtn": "<%= t 'read.tours.kb_shortcuts.nextBtn' %>",
    "doneBtn": "<%= t 'read.tours.kb_shortcuts.doneBtn' %>",
    "closeTooltip": "<%= t 'read.tours.kb_shortcuts.closeTooltip' %>"
  },
  "steps": [
    {
      "target": "#subscription-stats",
      "placement": "bottom",
      "title": "<%= t 'read.tours.kb_shortcuts.step1.title' %>",
      "content": "<%=
                      t 'read.tours.kb_shortcuts.step1.content_html',
                        entry_down: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_entries_down, I18n.locale),
                        entry_up: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_entries_up, I18n.locale),
                        toggle_open_entry: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_toggle_open_entry, I18n.locale),
                        sidebar_link_down: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_sidebar_link_down, I18n.locale),
                        sidebar_link_up: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_sidebar_link_up, I18n.locale),
                        select_sidebar_link: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_select_sidebar_link, I18n.locale),
                        toggle_show_read: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_toggle_show_read, I18n.locale),
                        toggle_read_entry: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_toggle_read_entry, I18n.locale),
                        mark_all_read: KeycodeToStringConverter.convert(Feedbunch::Application.config.kb_mark_all_read, I18n.locale)
                  %>"
    },
    {
      "target": "#user-management",
      "placement": "bottom",
      "arrowOffset": 260,
      "xOffset": -260,
      "title": "<%= t 'read.tours.kb_shortcuts.step2.title' %>",
      "content": "<%= t 'read.tours.kb_shortcuts.step2.content_html' %>"
    }
  ]
}

<% end %>